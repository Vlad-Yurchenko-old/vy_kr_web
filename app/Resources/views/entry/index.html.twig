{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entries list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Category</th>
                <th>Time</th>
                <th>Workerid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entry in entries %}
            <tr>
                <td><a href="{{ path('entry_show', { 'id': entry.id }) }}">{{ entry.id }}</a></td>
                <td>{{ entry.text }}</td>
                <td>{{ entry.category }}</td>
                <td>{% if entry.time %}{{ entry.time|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entry.workerId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entry_show', { 'id': entry.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entry_edit', { 'id': entry.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entry_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
