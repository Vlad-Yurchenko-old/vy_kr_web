{% extends 'base.html.twig' %}

{% block body %}
    <h1>Worker</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ worker.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ worker.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ worker.surname }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('worker_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('worker_edit', { 'id': worker.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
